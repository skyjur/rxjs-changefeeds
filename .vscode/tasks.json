{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "test:readme",
      "problemMatcher": {
        "owner": "javascript",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": [
          {
            "regexp": "^Failed - ([^\\s].*):(\\d+):(\\d+)$",
            "file": 1,
            "line": 2,
            "message": 0
          }
        ]
      }
    },
    {
      "type": "npm",
      "script": "build:dist",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "build:example",
      "problemMatcher": []
    }
  ]
}
